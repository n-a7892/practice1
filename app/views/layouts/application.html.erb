<!DOCTYPE html>
<html>
  <head>
    <title>Practice1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="header shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><span>書道展</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", root_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to '商品一覧', root_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to 'カート', root_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to "投稿作品一覧", root_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>

            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: 'btn btn-dark btn-outline-dark nav-link text-light' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="row">
      <div class="col-2 bg-primary">

      </div>
      <div class="col-8 text-center">
        <div class="main">
          <%= yield %>
        </div>
      </div>
      <div class="col-2 bg-primary">

      </div>
    </div>
    <footer class="footer bg-secondary">
    </footer>
  </body>
</html>
