<h2>新規登録画面</h2><br>

<!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50", placeholder: "example@com" %>
  </div><br>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <span>(<%= @minimum_password_length %> 字以上)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", size: "50", placeholder: "xxxxxx" %>
  </div><br>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "50", placeholder: "もう一度入力してください" %>
  </div><br>

  <div class="actions">
    <%= f.submit "登録完了" %>
  </div>
<% end %>

